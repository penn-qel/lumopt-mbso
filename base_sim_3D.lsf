#Builds metalens simulation from
#data in a file
switchtolayout;
deleteall;
clear;

redrawoff; #disable GUI updates

#PARAMETERS
xspan = 30e-6; #simulation span, centered at 0
yspan = 30e-6;
ztop = 1e-6; #source location, top of sim
zbottom = -20e-6; #fom location, bottom of sim
wlmin = 600e-9;
wlmax = 800e-9;
freqpoints = 11;
nd = 2.4;
surf_height = 0.5e-6; #height of metasurface. 0 < z < surf_height
meshx = 0.03e-6; #x mesh size in opt region
meshy = 0.03e-6; #y mesh size in opt regiom
meshz = 0.025e-6; #z mesh size in opt region
fomspanx = 30e-6; #x/y span of fom monitor
fomspany = 30e-6;

#Define simulation region
addfdtd;
set("dimension","3D");
set("x", 0);
set("y", 0);
set("x span", xspan);
set("y span", yspan);
set("z max", ztop);
set("z min", zbottom);
set("mesh type", "custom non-uniform");
set("mesh cells per wavelength", 6);

#Add plane wave source
addplane;
set("name", "source");
set("injection axis", "z");
set("direction", "backward");
set("x", 0);
set("x span", xspan);
set("y", 0);
set("y span", yspan);
set("z", ztop);
set("wavelength start", wlmin);
set("wavelength stop", wlmax);

#Global monitor settings
setglobalmonitor("frequency points", freqpoints);
setglobalmonitor("use wavelength spacing", true);

#Create bulk diamond
addrect;
set("name", "bulk diamond");
set("x", 0);
set("x span", 1.2*xspan);
set("y", 0);
set("y span", 1.2*yspan);
set("z min", zbottom*1.2);
set("z max", 0);
set("index", nd);

#Create custom mesh
addmesh;
set("name", "mesh_surface");
set("x", 0);
set("x span", xspan);
set("y", 0);
set("y span", yspan);
set("z min", 0);
set("z max", surf_height);
set("override x mesh", 1); #true
set("override y mesh", 1);
set("override z mesh", 1);
set("set maximum mesh step", 1);
set("dx", meshx);
set("dy", meshy);
set("dz", meshz);

## OPTIMIZATION FIELDS MONITOR 
addpower;
set('name','opt_fields');
set('monitor type','3D');
set("x", 0);
set("y", 0);
set("x span", xspan);
set("y span", yspan);
set("z max", 1.1*surf_height);
set("z min", -0.1*surf_height);

#FOM Fields
addpower;
set('name', 'fom');
set('monitor type','2D Z-normal');
set('x',0);
set('y',0.0);
set('x span', fomspanx);
set('y span', fomspany);
set('z', zbottom);

#Focal Fields
addpower;
set('name', 'focal');
set('monitor type','2D Z-normal');
set('x',0);
set('y',0.0);
set('x span', xspan);
set('y span', yspan);
set('z', zbottom);
set("enabled", 0);

#Bottom fields
addpower;
set('name', 'bottomfields');
set('monitor type','2D Z-normal');
set('x',0);
set('y',0.0);
set('x span', xspan);
set('y span', yspan);
set('z', 0);
set("enabled", 0);

#Cross-section fields
addpower;
set('name', 'cross-section');
set('monitor type', '2D Y-normal');
set('x', 0);
set('y', 0);
set('x span', xspan);
set('z max', ztop);
set('z min', zbottom);
set('enabled', 0);

redrawon; #enable GUI updating